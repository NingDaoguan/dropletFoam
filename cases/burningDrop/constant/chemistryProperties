FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "constant";
    object      chemistryProperties;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

rhoChemistryModel  ODEChemistryModel<gasThermoPhysics>;

chemistry           on;

chemistrySolver     ode;

initialChemicalTimeStep 1e-09;

sequentialCoeffs
{
    cTauChem        0.001;
}

EulerImplicitCoeffs
{
    cTauChem        0.05;
    equilibriumRateLimiter off;
}

// Solvers are RK, KRR4, and SIBS
odeCoeffs
{
    solver          SIBS;
    eps             0.01;
    scale           1.0;
}

