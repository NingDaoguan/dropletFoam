FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      VOFSetFieldsDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

defaultSpecies
(
    N2   1.0
);

vaporPhaseName   alphaVapor;

shapes
(
    DropNA
    {
        alphaName alphaLiquid;
        
        shape    ellipsoid;
        
        ellipsoidCoeffs
        {
            center   (-0.0005 0 0.0015);
            radius   (0.001 0.001 0.001);
        }
        
        delVapor 3e-4;
        U        (0 0 -0.5);
        
        liquidSpecies
        (
            HNO3L  0.85
            NO2L   0.15
        );
        
        vaporSpecies
        (
            HNO3   0.35
            NO2    0.65
        );
    }
    
    DropMMH
    {
        alphaName alphaLiquid;
        
        shape    ellipsoid;
                
        ellipsoidCoeffs
        {
            center   (0.0005 0 -0.0015);
            radius   (0.001 0.001 0.001);
        }
        
        delVapor 3e-4;
        U        (0 0 0.5);
        
        liquidSpecies
        (
            CH3NHNH2L  1.0
        );
        
        vaporSpecies
        (
            CH3NHNH2   0.1
        );
    }

);


