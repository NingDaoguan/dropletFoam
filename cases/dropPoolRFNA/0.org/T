FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 280;

boundaryField
{
    wall
    {
        type            fixedValue;
        value           uniform 280;
    }
    
    atmosphere
    {
        type            inletOutlet;
        inletValue      uniform 280;
        value           uniform 280;
    }
        
    defaultFaces
    {
        type            zeroGradient;
        value           uniform 280;
    }
}

