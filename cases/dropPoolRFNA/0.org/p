FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      p;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [1 -1 -2 0 0 0 0];

internalField   uniform 1e5;

boundaryField
{
    wall
    {
        type            zeroGradient;
    }
    
    atmosphere
    {
        type            totalPressure;
        p0              uniform 1e5;
        U               U;
        phi             phi;
        rho             rho;
        psi             none;
        gamma           1;
        value           uniform 1e5;
    }

    
    defaultFaces
    {
        type            zeroGradient;
        value           uniform 1e5;
    }
}

// ************************************************************************* //
