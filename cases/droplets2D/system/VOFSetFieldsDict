FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      VOFSetFieldsDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

defaultSpecies
(
    N2   1.0
);

vaporPhaseName   alphaVapor;

shapes
(
    DropMMH
    {
        alphaName alphaLiquid;
        
        shape    ellipsoid;
        
        ellipsoidCoeffs
        {
            center   (0 0.003 0.00411);
            radius   (0 0.001 0.001);
        }
        
        delVapor 1.5e-4;
        U        (0 0 -1);
        
        liquidSpecies
        (
            CH3NHNH2L  1.0
        );
        
        vaporSpecies
        (
            CH3NHNH2   0.1
        );
    }
    
    DropNA
    {
        alphaName alphaLiquid;
        
        shape    ellipsoid;
                
        ellipsoidCoeffs
        {
            center   (0 0.003 0.00189);
            radius   (0 0.001 0.001);
        }
        
        delVapor 1.5e-4;
        U        (0 0 1);
        
        liquidSpecies
        (
            HNO3L  0.995
            NO2L   0.005
        );
        
        vaporSpecies
        (
            HNO3   0.1
            NO2    0.005
        );
    }

);


