            nu              nu [ 0 2 -1 0 0 0 0 ] 1e-6;
   
            rho0         rho0 [ 1 -3 0 0 0 0 0 ] 1000.0;
            Tc           Tc   [ 0 0 0 1 0 0 0]   647.1;
            kappa        kappa [1 1 -3 -1 0 0 0] 0.68;
            
            sigma0       sigma0 [ 1 0 -2 0 0 0 0] 0.07;//7; //13;
            sigmaa       0.0;
               
            evaporationModel HertzKnudsenPressure;
            
            HertzKnudsenPressureCoeffs
