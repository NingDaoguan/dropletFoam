FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      VOFSetFieldsDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //


defaultSpecies
(
    N2   1.0
);

vaporPhaseName   alphaVapor;

shapes
(
    WaterDrop
    {
        alphaName  alphaLiquid;
        
        shape      ellipsoid;
        
        ellipsoidCoeffs
        {
            center   (0 0 0);
            radius   (0.005 0.005 0);
        }
        
        delVapor 2.3e-2;
        U        (0 0 0);
        
        liquidSpecies
        (
            H2OL  1.0
        );
        vaporSpecies
        (
            H2O   0.42
        );
    }
);


