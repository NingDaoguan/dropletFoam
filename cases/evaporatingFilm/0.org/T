FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 293;

boundaryField
{
    atmosphere
    {
        type            fixedValue;
        value           uniform 293;
    }
    
    sides
    {
        type            symmetryPlane;
    }
    
    heatedWall
    {
        type            fixedValue;
        value           uniform 413;
    }
    
    defaultFaces
    {
        type            symmetryPlane;
    }
}

