FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      VOFSetFieldsDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //


defaultSpecies
(
    N2   1.0
);

liquidPhaseName  alphaLiquid;
vaporPhaseName   alphaVapor;

droplets
(
    WaterFilm
    {
        center   (-10 0.0005 0.0005);
        radius   (10.001001 10.001001 10.001001);
        delVapor 1e-2;
        U        (0 0 0);
        liquidSpecies
        (
            H2OL  1.0
        );
        vaporSpecies
        (
            H2O   1.0
        );
    }
);


