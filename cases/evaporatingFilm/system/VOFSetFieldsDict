FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      VOFSetFieldsDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //


defaultSpecies
(
    N2   1.0
);

vaporPhaseName   alphaVapor;

shapes
(
    WaterFilm
    {
        alphaName  alphaLiquid;
        
        shape      plane;
        
        planeCoeffs
        {
            point   (0.001001 0.0005 0.0005);
            normal   (1 0 0);
        }
        
        delVapor 1e-2;
        U        (0 0 0);
        
        liquidSpecies
        (
            H2OL  1.0
        );
        vaporSpecies
        (
            H2O   0.2
        );
    }
);


