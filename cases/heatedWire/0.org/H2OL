FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      H2OL;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 0 0 0 0];

internalField   uniform 1;

boundaryField
{
    defaultFaces
    {
        type            zeroGradient;
    }
    
    Top
    {
        type            inletOutlet;
        inletValue      uniform 1;
        value           uniform 1;
    }
    
    Wire
    {
        type            zeroGradient;
    }
    
    Bottom
    {
        type            zeroGradient;
    }
    
    FrontAndBack
    {
        type            symmetryPlane;
    }
    
    Sides
    {
        type            zeroGradient;
    }
}


