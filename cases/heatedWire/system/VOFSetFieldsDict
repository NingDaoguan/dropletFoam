defaultSpecies
(
    H2OL   1.0
);

vaporPhaseName   alphaLiquid;

shapes
(
    VaporFilm
    {
        alphaName  alphaVapor;
        
        shape      ellipsoid;
        
        ellipsoidCoeffs
        {
            center   (0.03 -0.07 0.005);
            radius   (0.006 0.006 0);
        }
        
        delVapor 0.0;
        U        (0 0 0);
        
        liquidSpecies
        (
            H2O  1.0
        );
        vaporSpecies
        (
        );
    }
);


