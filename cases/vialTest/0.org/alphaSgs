FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      alphaSgs;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [1 -1 -1 0 0 0 0];

internalField   uniform 1e-11;

boundaryField
{
    atmosphere
    {
        type            zeroGradient;
    }
    walls
    {
        type            alphatJayatillekeWallFunction;
        value           uniform 1e-11;
    }
    frontAndBack
    {
        type            symmetryPlane;
    }
}

